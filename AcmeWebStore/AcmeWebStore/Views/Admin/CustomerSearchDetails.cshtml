
@model AcmeWebStore.ViewModels.CustomerViewModel

@{

}


<h1>Order Summary for @Model.firstName @Model.lastName</h1>


<table class="table">
    <tr>
        <th>Order Id </th>
        <th>Location</th>
        <th>Items sold</th>
        <th>Total Price</th>
        <th>Details</th>

    </tr>
    @foreach (AcmeWebStore.ViewModels.OrderViewModel order in Model.Orders)
    {
        <tr>
            <td>
                @order.Id
            </td>
            <td>
                Acme @order.Location.City
            </td>
            <td>
                @order.GetItemsSold()
            </td>
            <td>

                $@order.Total
            </td>
            <td>
                @Html.ActionLink("Details", "OrderDetails", new { id = order.Id })
            </td>
        </tr>
    }
</table>