@{
    ViewData["Title"] = "Index";

}

<h2>Acme Web Store</h2>
<h4>Proudly serving our customers from @ViewBag.numStores locations everyday! Over @ViewBag.sales products sold!</h4>

<p>Welcome to Acme! </p>

@if (TempData.Peek("name") != null)
{
    <h6>Welcome back @(TempData.Peek("name"))!</h6>
        <button id="newOrderButton" class="btn btn-secondary text-white">
            @Html.ActionLink("New Order", "CreateOrder", new { Id = 0 })
        </button> 
        <button id="logoutButton" class="btn btn-primary text-white">
            @Html.ActionLink("Logout", "Logout")
        </button>
}
@if (TempData.Peek("name") == null) {
<button id="newUserButton" class="btn btn-secondary text-white">
    New User
</button>
<button id="signInButton" class="btn btn-primary text-white">
    Sign in
</button>

}




